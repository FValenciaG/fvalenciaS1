<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fvalenciaS1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Calcular Aporte al IESS"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <StackLayout>
                <Entry x:Name="TxtNombre"  Placeholder="Ingrese su nombre" />
                <Entry x:Name="TxtApellido"  Placeholder="Ingrese su apellido" />
                <Entry x:Name="TxtEdad" Placeholder="Ingrese su edad"  />
                <Entry x:Name="TxtSalario" Placeholder="Ingrese su salario"  />
            </StackLayout>
            <Button
                x:Name="CalcularBtn"
                Text="Calcular Aporte" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="CalcularBtn_Clicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
